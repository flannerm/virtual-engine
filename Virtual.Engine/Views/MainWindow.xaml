                <MenuItem x:Name="mnuPlotBirdies" Header="Plot Birdies" Command="{Binding PlotBirdiesCommand}"/>
            </MenuItem>-->

            <!--<MenuItem Header="Take" Command="{Binding TakeCommand}"/>-->
